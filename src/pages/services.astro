  font-style: italic;
  border-bottom: solid 5px #776aa5;
 }
 
.services {
  margin-top: 80px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 40px;
  text-align: center;
}
.services .service {
