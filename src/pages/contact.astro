---
import Layout from '../layouts/Layout.astro';
import { AstroSeo } from '@astrolib/seo';
import contact from '../images/contacttest.jpg'
---
<AstroSeo
  title="Tria-Techni: Our"
  description="Contact Us"
/>
<Layout>
<section class="contact-container bg-grid">
  <svg width="auto" height="137" class="top_design_element" viewBox="0 0 951 137" fill="none" xmlns="http://www.w3.org/2000/svg">
  <path d="M2 0C637.678 231.39 950.446 95.166 950.446 95.166" stroke="url(#paint0_linear_4_1088)" stroke-width="3" stroke-linecap="round"/>
  <defs>
  <linearGradient id="paint0_linear_4_1088" x1="172.523" y1="104.271" x2="471.306" y2="169.961" gradientUnits="userSpaceOnUse">
  <stop offset="0.125" stop-color="#4D495E" stop-opacity="0.35"/>
  <stop offset="0.520833" stop-color="#716A9C" stop-opacity="0.48"/>
  <stop offset="0.880208" stop-color="#D79AA4" stop-opacity="0.46"/>
  </linearGradient>
  </defs>
  </svg>
  <div id="contact-form">
  <form id="form" action="/new/form/process_email.php" method="post">
    <div>
    <label>Name</label><br>
    <input type="text" name="name" required>
    </div>

    <div>
    <label>Contact</label> <br>
    <input type="tel" name="contact" required>
    </div>

    <div>
    <label>Email</label><br>
    <input type="text" name="email" required>
    </div>
    <h3>Services Concerned</h3>
    <div id="services-offered-container">
      
        <div>
        <label><input type="checkbox" value="Branding"><span>Branding</span></label><br />
        <label><input type="checkbox" value="REBranding"><span>REBranding</span></label><br />
        <label><input type="checkbox" value="Market Research & Analysis"><span>Market Research & Analysis</span></label><br />
        <label><input type="checkbox" value="Brand Positioning"><span>Brand Positioning</span></label>
        </div>

        <div>
        <label><input type="checkbox" value="Logo design"><span>Logo design</span></label><br />
        <label><input type="checkbox" value="Website / Ecommerce"><span>Website / Ecommerce</span></label><br />
        <label><input type="checkbox" value="mobile app"><span>mobile app</span></label><br />
        <label><input type="checkbox" value="custom application"><span>custom application</span></label>
        </div>

    </div>

    <div>
      <h3>Message</h3>
      <div id="message-container"><textarea name="message" value="message" cols="40" rows="5"></textarea></div>
    </div>

  <input type="submit" class="feedback-button" value="Send">

  </form>
  </div>
</section>
</Layout>



