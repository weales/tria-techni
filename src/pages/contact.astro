  h3 {
    text-transform: uppercase;
  }
  .contact-container {
    margin-top: 380px;
    padding: 40px;
  }
  #contact-form {
    clip-path: polygon(66% 0, 69% 0, 0 100%, 0% 100%);
    opacity: 0;
    background-color: #55434A;
    border-radius: 20px;
  }
  #form {
    margin: 0 auto;
    padding: 20px;
  }
  #form label, #form textarea, #form input, h3 {
    font-family: 'Open Sans', sans-serif;
    font-size: clamp(1.125rem, 2vw + 0.5rem, 1.875rem);
    color: white;
  }
  #form input, #form textarea {
    color: white;
    background-color: #69525C;
    border: none;
    padding: 1rem;
    margin-bottom: 1rem;
    width: 100%;
    border-radius: 10px;
  }
  #form input:focus, #form textarea:focus {
    background-color: #7C626D;
    border: none;
    outline: none;
    transition: all 250ms ease-in-out;
  }
  #services-offered-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    padding: 20px 20px 0px 20px;
    border-radius: 10px;
    border: solid 4px #7D646F;
    margin-bottom: 20px;
  }
  #services-offered-container input[type="checkbox"] {
    display: none;
  }
  #services-offered-container span {
    display: inline-block;
    padding: 20px;
    width: 100%;
    margin-bottom: 20px;
    text-transform: uppercase;
    border: none;
    border-radius: 20px;
    color: white;
    background-color: #69525C;
    cursor: pointer;
  }
  #services-offered-container input[type="checkbox"]:checked + span {
    background-color: #7C626D;
    transition: all 0.3s ease-in-out;
  }
  #message-container {
    padding: 20px 20px 0px 20px;
    border-radius: 10px;
    border: solid 4px #7D646F;
    margin-bottom: 20px;
  }
  .feedback-button {
    text-transform: uppercase;
    font-family: 'Open Sans', sans-serif;
    font-size: 22px;
    cursor: pointer;
  }
  @media (min-width: 320px) and (max-width: 1120px) {
    #contact-container {
      margin-top: 280px;
    }
  }
  @media (max-width: 800px) {
    #form input, #form textarea, #services-offered-container span {
      padding: 0.5rem
    }
  }
  @media (max-width: 1120px) {
    #services-offered-container {
      display: grid;
      grid-template-columns: 1fr;
      gap: 0;
    }
  }
</style>

<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/ScrollTrigger.min.js"></script>

<script is:inline>
  gsap.registerPlugin(ScrollTrigger);
  
  let tl = gsap.timeline ({ defaults: { ease: "Power4.easeInOut", duration: 2 } })
  tl.to('.logo', { 'clip-path': 'polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)', opacity: 1, duration: 0.5 } )
  tl.to('#contact-form', { 'clip-path': 'polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)', opacity: 1, duration: 0.5 } )
  tl.to('.toggle', { opacity: 1, duration: 0.5, x:0, ease: "elastic" }, "-=.4" )
</script>