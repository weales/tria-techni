---
import Layout from '../layouts/Layout.astro';
import { AstroSeo } from '@astrolib/seo';
import MainImage from '../images/lewis-nguyen-E8pRGD7h-5w-unsplash.jpg';
import { Icon } from 'astro-icon';
---
<AstroSeo
  title="Tria-Techni: Home Page"
  description="This is the homepage my homie"
/>

<Layout title="Tria-Techni">

  <section class="home">
  <img src={MainImage} class="home-img" alt="" />
  <div class="home-content">
  <h1>we design</h1>
  <p>
  responsive, accessible,
  performant, resilient, & beautiful <span class="website-emp">websites.</span>
  </p>
  <a href="/new/services" class="btn"> <Icon name="ic:baseline-search" /> Find Out More</a> 
  <span class="select"> OR </span> <a href="/new/contact" class="btn">  <Icon name="ic:baseline-emoji-people" /> Hire us</a>
  </div>
  </section>

</Layout>

<style>
section.home {
  flex-direction: row;
}
.home-content {
  position: relative;
  z-index: 10;
  max-width: 800px;
}
.home-content svg {
  width: 30px;
  height: 30px;
}
.home-img {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 110%;
  display: block;
}
.select {
  font-family: 'Open Sans', sans-serif;
  color: white;
  font-size: 22px;
  padding: 0 5px;
}
/* BUTTON */
.btn {
  color: #fff;
  font-family: 'Open Sans', sans-serif;
  font-size: clamp(1rem, 2.5vh, 2rem);
  font-weight: 700;
  text-transform: uppercase;
  cursor: pointer;
  display: inline-block;
  background: var(--dark-brown-color);
  text-decoration: none;
  padding: 10px 30px;
  margin: 20px 0;
  border: 0;
  transition: all 0.2s ease-out;
  -webkit-transition: all 0.2s ease-out;
  -moz-transition: all 0.2s ease-out;
  -ms-transition: all 0.2s ease-out;
  -o-transition: all 0.2s ease-out;
}

.btn:hover {
	background-color: #43415e;
	transform: scale(1.03);
	border-radius: 10px;
	transition: all 0.2s ease-in;
	-webkit-transition: all 0.2s ease-in;
	-moz-transition: all 0.2s ease-in;
	-ms-transition: all 0.2s ease-in;
	-o-transition: all 0.2s ease-in;
	-webkit-transform: scale(1.03);
	-moz-transform: scale(1.03);
	-ms-transform: scale(1.03);
	-o-transform: scale(1.03);
	-webkit-border-radius: 10px;
	-moz-border-radius: 10px;
	-ms-border-radius: 10px;
	-o-border-radius: 10px;
}
@media (min-width: 1121px) and (max-width: 1460px) {
  .home-content p {
    text-shadow: 5px 5px 5px black;
  }
}
@media (max-width: 1120px) {
 h1 {
  font-size: clamp(3.375rem, 1vw + 1rem, 4rem);
 }
 p {
  font-size: clamp(1.5rem, 1vw + 1rem, 2.75rem);
 }
  section.home {
    align-items: flex-start;
    padding: 3vw 3vh;
    margin-top: 270px;
    height: auto;
  }
  .home-img {
    display:none;
  }
  .home-content {
    max-width: 100%;
}
}
@media (min-width: 1121px) {
  section.home {
   align-items: flex-start;
   padding-top: 480px;
  }
}
</style>