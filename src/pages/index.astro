---
import Layout from '../layouts/Layout.astro';
import { AstroSeo } from '@astrolib/seo';
import MainImage from '../images/lewis-nguyen-E8pRGD7h-5w-unsplash.jpg';
//const name = 'Jeff';
//const style = 'purple';
//const response = await fetch('https://jsonplaceholder.typicode.com/users'); 
//const users = await response.json();
//const visible = false;
---
<AstroSeo
  title="Tria-Techni: Home Page"
  description="This is the homepage my homie"
/>

<Layout title="Tria-Techni">
  <section class="home">
  <img src={MainImage} class="home-img" alt="" />
  <div class="home-content">
  <h1>we design</h1>
  <p>
  responsive, accessible,
  performant, resilient, & beautiful <span class="website-emp">websites.</span>
  </p>
  <a href="/services" class="btn">Find Out More</a> OR <a href="/contact" class="btn">Hire us</a>
  </div>
  </section>
</Layout>

<style>
section.home {
  flex-direction: row;
}
.home-content {
  position: relative;
  z-index: 10;
  max-width: 800px;
}
.home-img {
  position: absolute;
  bottom: 0;
  right: 0;
  height: 110%;
}
@media (min-width: 1121px) and (max-width: 1460px) {
  .home-content p {
    text-shadow: 5px 5px 5px black;
  }
}
@media (max-width: 1120px) {
 h1 {
  font-size: clamp(3.375rem, 1vw + 1rem, 4rem);
 }
 p {
  font-size: clamp(1.5rem, 1vw + 1rem, 2.75rem);
 }
  section.home {
    align-items: flex-start;
    padding: 3vw 3vh;
    margin-top: 270px;
    height: auto;
  }
  .home-img {
    display:none;
  }
  .home-content {
    max-width: 100%;
}
}
@media (min-width: 1121px) {
  section.home {
   align-items: flex-start;
   padding-top: 480px;
  }
}
</style>